Процедура ОтветитьНаСообщение(ОбсуждениеИдентификатор, СообщениеИдентификатор, Результат) Экспорт
	
	СообщениеПользователя = ОбсужденияСервер.ПолучитьСообщение(ОбсуждениеИдентификатор, СообщениеИдентификатор);
	Обсуждение = ОбсужденияСервер.ПолучитьОбсуждение(ОбсуждениеИдентификатор);
	
	РаспознанноеДействие = Неопределено;
	Если ЭтоКодОтветаДа(СообщениеПользователя.Текст) Тогда
		РаспознанноеДействие = АссистентУправленияКлиентСервер.КодДействияСообщенияВыполнитьДействие();
	ИначеЕсли ЭтоКодОтветаОтмена(СообщениеПользователя.Текст) Тогда
		РаспознанноеДействие = АссистентУправленияКлиентСервер.КодДействияСообщенияОтмена();
	КонецЕсли;
	
	Если РаспознанноеДействие <> Неопределено Тогда
		
		СообщениеОтветНа = ОбсужденияСервер.ПолучитьПоследнееСообщение(ОбсуждениеИдентификатор, ПользовательАссистентИдентификаторСВ(), СообщениеИдентификатор);
		СообщениеСодержитДействие = Ложь;
		Если СообщениеОтветНа <> Неопределено Тогда
			СообщениеСодержитДействие = СообщениеОтветНа.Действия.НайтиПоЗначению(РаспознанноеДействие) <> Неопределено;
		КонецЕсли;
		
		Если СообщениеСодержитДействие Тогда
			
			Если РаспознанноеДействие = АссистентУправленияКлиентСервер.КодДействияСообщенияВыполнитьДействие() Тогда
				Результат.Действие = РаспознанноеДействие;
				Результат.СообщениеИдентификатор = СообщениеОтветНа.Идентификатор;
				Результат.ОбсуждениеИдентификатор = Обсуждение.Идентификатор;
				Результат.ДанныеСообщений.Добавить(ДанныеСообщенияСВ(Обсуждение.Идентификатор, СообщениеОтветНа.Данные));
				Возврат;
			КонецЕсли;
			
			Если РаспознанноеДействие = АссистентУправленияКлиентСервер.КодДействияСообщенияОтмена() Тогда
				ОбработатьДействиеОтменаСообщенияАссистента(ОбсуждениеИдентификатор, СообщениеОтветНа.Идентификатор, Ложь);
				Возврат;
			КонецЕсли;
			
		КонецЕсли;
		
	КонецЕсли;
	
	ДанныеСообщения = ОбсужденияСервер.НовыйДанныеСообщения();
	ДанныеСообщения.Объект = ОбсуждениеИдентификатор;
	ДанныеСообщения.Дата   = СообщениеПользователя.Дата + 1;
	ДанныеСообщения.Текст  = ОтветНаПроивольнуюРеплику(СообщениеПользователя.Текст);
	ДанныеСообщения.Автор  = ПользовательАссистент();
	ОбсужденияСервер.СоздатьСообщение(ДанныеСообщения);
	

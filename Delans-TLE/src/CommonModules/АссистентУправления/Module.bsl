	УдалитьЛишниеСимволы(Текст);
	
	Если Текст = "-"
		ИЛИ Текст = "нет"
		ИЛИ СтрНайти(Текст, " ") = 0 И СтрНачинаетсяС(Текст, "отмен")
		ИЛИ Текст = "ytn" Тогда
